<Window
	x:Class="DeviceInfoCheck.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DeviceInfoCheck"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="Device Info"
	Width="450"
	Height="500"
	ui:WindowHelper.UseModernWindowStyle="True"
	ResizeMode="CanMinimize"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBox
			x:Name="main"
			Margin="12"
			IsReadOnly="True"
			TextWrapping="WrapWithOverflow" />
		<StackPanel
			Grid.Row="1"
			Margin="12,8,12,12"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				MinWidth="100"
				Click="Refresh_Clicked"
				Content="Refresh" />
			<Button
				MinWidth="100"
				Margin="12,0,0,0"
				Click="Copy_Clicked"
				Content="Copy" />
		</StackPanel>

		<Grid
			x:Name="loadingGrid"
			Grid.RowSpan="2"
			Background="#30888888">
			<ui:ProgressRing
				x:Name="loading"
				Width="80"
				Height="80"
				IsActive="True" />
		</Grid>
	</Grid>
</Window>

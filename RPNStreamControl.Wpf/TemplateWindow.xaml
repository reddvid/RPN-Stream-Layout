<Window
	x:Class="RPNStreamControl.Wpf.TemplateWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RPNStreamControl.Wpf"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="TemplateWindow"
	Width="1280"
	Height="752"
	Background="#3FFE0F"
	ResizeMode="NoResize"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="844*" />
			<RowDefinition Height="195*" />
			<RowDefinition Height="42*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="68*" />
			<ColumnDefinition Width="1784*" />
			<ColumnDefinition Width="68*" />
		</Grid.ColumnDefinitions>
		<Grid
			x:Name="MainGrid"
			Grid.Row="1"
			Grid.Column="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
			<Grid.RowDefinitions />
			<Grid.ColumnDefinitions>
				<ColumnDefinition x:Name="LogoWidth" Width="270*" />
				<ColumnDefinition Width="1515*" />
			</Grid.ColumnDefinitions>
			<!--  TITLES  -->
			<Grid Grid.Column="1" Grid.ColumnSpan="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="60*" />
					<ColumnDefinition Width="30*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="57*" />
					<RowDefinition Height="86*" />
					<RowDefinition Height="52*" />
				</Grid.RowDefinitions>

				<!--  HOTLINES  -->
				<Grid
					x:Name="GridHotlines"
					Grid.Row="1"
					Grid.Column="2"
					Grid.ColumnSpan="2"
					Margin="-24,24,0,0"
					HorizontalAlignment="Stretch"
					Background="#691515">
					<TextBlock
						Margin="24,4"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontSize="12"
						FontWeight="Bold"
						Foreground="White"
						Text="HEHEHE" />
				</Grid>

				<!--  Grid Titles  -->
				<Grid Grid.Row="1">
					<Rectangle Fill="#0011AA">
						<Rectangle.RenderTransform>
							<SkewTransform AngleX="-24" />
						</Rectangle.RenderTransform>
					</Rectangle>
					<TextBlock
						x:Name="TextTitle"
						Margin="24,4,30,4"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontSize="24"
						FontWeight="Bold"
						Foreground="White"
						Text="RADYO RONDA MORNING EDITION"
						TextAlignment="Center" />
				</Grid>

				<!--  ANCHOR GRID  -->
				<Grid
					Margin="0,0,40,-34"
					HorizontalAlignment="Right"
					VerticalAlignment="Center">
					<Rectangle Fill="White">
						<Rectangle.RenderTransform>
							<SkewTransform AngleX="24" />
						</Rectangle.RenderTransform>
					</Rectangle>
					<TextBlock
						x:Name="TextAnchor"
						Margin="48,4,30,4"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontSize="14"
						FontWeight="Bold"
						Foreground="#0011AA"
						Text="ANCHOR: ROD SADIAN"
						TextAlignment="Center" />
				</Grid>

				<!--  SCROLL TEXT GRID  -->
				<Grid
					Grid.Row="2"
					Grid.ColumnSpan="2"
					Background="White">
					<TextBlock
						Margin="12,4"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontSize="16"
						FontWeight="Bold"
						Text="HEHEHE" />
				</Grid>

			</Grid>

			<!--  LOGO  -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="117*" />
					<RowDefinition Height="27*" />
					<RowDefinition x:Name="Bottom" Height="52*" />
				</Grid.RowDefinitions>
				<Image
					Margin="0,0,0,-4"
					HorizontalAlignment="Stretch"
					Source="/RPNStreamControl.Wpf;component/Assets/Images/Logos/batac-logo.png"
					Stretch="UniformToFill" />
				<Grid Grid.Row="1" Background="White">
					<Image
						Height="19"
						Margin="4,0"
						Source="/RPNStreamControl.Wpf;component/Assets/Images/radyo-ronda.png" />
				</Grid>

				<!--  DATETIME  -->
				<Grid
					x:Name="TimeAndDate"
					Grid.Row="2"
					Margin="0,0,-4,0"
					Background="#691515">
					<TextBlock
						Margin="8"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontSize="14"
						FontWeight="Bold"
						Foreground="White"
						Text="JAN 5, 2023 10:45PM"
						TextAlignment="Center" />
				</Grid>
			</Grid>
		</Grid>
	</Grid>
</Window>
